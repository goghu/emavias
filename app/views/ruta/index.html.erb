<p id="notice"><%= notice %></p>

<h1>Rutas</h1>

<table class="table table-bordered" id="myTable">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ruta.each do |rutum| %>
      <tr>
        <td><%= rutum.nombre %></td>
        <td><%= rutum.descripcion %></td>
        <td>
          <%= link_to 'Ver', rutum %>
          <%= link_to 'Editar', edit_rutum_path(rutum.id) %>
          <%= link_to 'Caminos', ruta_ver_caminos_path(rutum) %>
          <%= link_to 'Eliminar', rutum, method: :delete, data: { confirm: 'Estas seguro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nueva Ruta', new_rutum_path %>
