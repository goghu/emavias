<%# form_tag('/create', method: :post) do %>
<style type="text/css">
  input.largerCheckbox
  {
    width: 30px;
    height: 30px;
  }
</style>
<div class="row">
  <div class="col-lg-12">
    <div class="card card-outline-info">
      <div class="card-body">

        <%= form_tag('/rutas/crear') do %>
        <%# form_for ruta do |f| %>
        <%# form_with(model: ruta, local: true) do |f| %>
        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <div class="controls">
                  <%= text_field_tag('ruta[nombre]', nil, class: 'form-control') %>
                </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Descripcion</label>
                <div class="controls">
                  <%= text_field_tag('ruta[descripcion]', nil, class: 'form-control') %>
                </div>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
                <label class="control-label">Subruta</label>
                <div class="controls">
                  <input type="checkbox" name="ruta[subruta]" class="form-check-input largerCheckbox">
                </div>
            </div>
          </div>
        </div>
        <div class="form-group" style="text-align:center;">
          <div class="form-actions">
            <div class="row">
              <div class="col-md-12">
                <button type="submit" class="btn btn-block btn-success"><i class="fa fa-check"></i> Guardar</button>
              </div>
            </div>
          </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>