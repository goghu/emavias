<p id="notice"><%= notice %></p>

<h1>Cargos</h1>

<table class="table table-bordered" id="myTable">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Nivel</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cargos.each do |cargo| %>
      <tr>
        <td><%= cargo.descripcion %></td>
        <td><%= cargo.nivel %></td>
        <td>
          <%= link_to 'Ver', cargo %>
          <%= link_to 'Editar', edit_cargo_path(cargo) %>
          <%= link_to 'Eliminar', cargo, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

