<p id="notice"><%= notice %></p>

<h1>Gestiones</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gestiones.each do |gestione| %>
      <tr>
        <td><%= gestione.numero %></td>
        <td><%= link_to 'Show', gestione %></td>
        <td><%= link_to 'Edit', edit_gestione_path(gestione) %></td>
        <td><%= link_to 'Destroy', gestione, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gestione', new_gestione_path %>
