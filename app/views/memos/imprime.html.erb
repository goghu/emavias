<%# @datos_memo.inspect %>
<link href="<%= asset_path '/css/impresion.css' %>" rel="stylesheet" type="text/css" />

<div class="row page-titles">
  <div class="col-md-4 col-12 align-self-center">
    <h3 class="text-themecolor m-b-0 m-t-0">

    </h3>
  </div>
  <div class="col-md-4 col-12 align-self-center">

  </div>

  <div class="col-md-4  col-12 align-self-center no-imprime">

    <button class="btn pull-right btn-secondary boton-guarda-cot btn-paraimprimir" onclick="print();">
      <i class="fa fa-print"></i> IMPRIMIR
    </button>
  </div>

</div>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="clase-impresion" style="width: 800px;">
          <table class="tabla-impresion-cabecera" border="0">
            <tr>
              <td style="width: 150px;">
                <img src="<%= asset_path '/assets/images/logo_emavias.jpg' %>" />
              </td>
              <td style="width: 600px; text-align: center;">

              </td>
            </tr>
          </table>
          <h1 style="text-align: center;">MEMORANDUM</h1>
          <br />
          <table class="tabla" border="0">
            <tr>
              <td style="width: 40%;" text-align=>
                <%= @datos_memo.fecha %>
              </td>
              <td style="width: 60%;">
                <h3>GAF - CC CITE <%= @datos_memo.cite %></h3><br />
                <table>
                  <tr>
                    <td>Para:&nbsp;&nbsp;&nbsp;</td>
                    <td>
                      <% @datos_memo.escogidos.inspect %>
                      <% @datos_memo.escogidos.each do |e| %>
                        <%= e.user.nombre %><br />
                        <b><%= e.user.cargo.descripcion %></b><br />
                      <% end %>
                    </td>
                  </tr>
                </table>
                <p>&nbsp;</p>
                <table>
                  <tr>
                    <td>De:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                    <td>
                      <%= @datos_memo.remitente.nombre %><br />
                      <b><%= @datos_memo.remitente.cargo.descripcion %></b><br />
                    </td>
                  </tr>
                </table>

                <br /><b>Ref: Designacion de Calificacion </b>

              </td>
            </tr>
          </table>
          <hr />
          <%= @datos_memo.documento.html_safe %>
      </div>
    </div>
  </div>
</div>