<% end %>

<div class="row page-titles">
  <div class="col-md-6 col-8 align-self-center">
    <h3 class="text-themecolor m-b-0 m-t-0">
      <span style="color: #000000;">Camino: </span><%= @camino.ruta.nombre %>
      <h3><%= @camino.unidade.descripcion %> (<%= @camino.cargo.descripcion %>)</h3>
    </h3>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">

        <div class="row">
          <div class="col-md-4">

          <div class="row">
            <%= form_tag('/documento/guarda_nuevo') do %>
            <h2>Documentos</h2>

            <div class="row">
              <div class="col-md-4">
                Documento
              </div>  
              <div class="col-md-8">
                <%= hidden_field_tag('camino_id', @camino.id) %>
                <%= text_field_tag('descripcion', nil, :required => true, :class=>'form-control', maxlength: '150') %>
              </div>
            </div>

            <br />
            
            <div class="row">
              <div class="col-md-4">Tipo</div>
              <div class="col-md-8">
                <select name="tipo" class="form-control" required>
                  <option value="">Seleccione Tipo</option>
                  <option value="ca">Campo Abierto</option>
                  <option value="nv">No Visisble</option>
                </select>
              </div>
            </div>

            <br />

            <div class="row">
              <div class="col-md-4">Adjunto</div>
              <div class="col-md-8">
                <input type="checkbox" name="presento"></label>
              </div>
            </div>

            <hr />
            <h2>Memorandum</h2>

            <div class="row">
              <div class="col-md-4">
                Documento
              </div>  
              <div class="col-md-8">
                <div class="card">
                  <div class="card-body">
                    <select class="select2 m-b-10 select2-multiple" name="funcionarios" style="width: 100%" multiple="multiple" data-placeholder="Seleccione">
                      <optgroup label="Funcionarios">
                        <% personal.each do |p| %>
                          <option value="<%= p.id %>"><%= p.nombre %> (<%= p.cargo.descripcion %>)</option>
                        <% end %>
                      </optgroup>
                    </select>
                    <input type="hidden" name="valores_personal" id="valores_personal">
                  </div>
                </div>
              </div>
            </div>

            <%= submit_tag("Guardar") %>

            <% end %>
          </div>
        </div>

          <div class="col-md-8">
            
            <% if @listado_documentos.present? %>

            <table class="table table-bordered" id="myTable">
              <thead>
                <tr>
                  <th>Descripcion</th>
                  <th>Tipo</th>
                  <th>Adjunto</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @listado_documentos.each do |ld| %>
                <tr>
                  <td><%= ld.descripcion %></td>
                  <td>
                    <% if ld.tipo == 'ca' %>
                      Campo Abierto
                    <% else %>
                      No Visible
                    <% end %>
                  </td>
                  <td>
                    <%# ld.presento %>
                      <% if ld.presento.nil? %>
                        No
                      <% else %>
                        Si
                      <% end %>
                  </td>
                  <td>
                    <%# link_to 'Ver', rutum %>
                    <%# link_to 'Editar', edit_rutum_path(rutum.id) %>
                    <%# link_to 'Caminos', ruta_ver_caminos_path(rutum) %>
                    <%= link_to 'Eliminar', controller: 'documentos', action: 'eliminar', id_documento: ld.id, id_camino: @camino.id %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <% else %>
            No tiene unidades
            <% end %>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>

