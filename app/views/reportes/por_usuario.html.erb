  </div>

  <div class="col-md-4  col-12 align-self-center no-imprime">

    <button class="btn pull-right btn-secondary boton-guarda-cot btn-paraimprimir" onclick="print();">
      <i class="fa fa-print"></i> IMPRIMIR
    </button>
  </div>

</div>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="clase-impresion" style="width: 800px;">
          <% if @usuario.present? %>
            <table class="tabla-impresion-cabecera" border="0">
              <tr>
                <td style="width: 150px;">
                  <img src="<%= asset_path '/assets/images/logo_emavias.jpg' %>" />
                </td>
                <td style="width: 600px; text-align: center;">
                  <h5 style="font-weight: bold; font-size: 18pt;">REPORTE POR USUARIO</h5>
                  <h5><b>NOMBRE: </b><%= @usuario.nombre %></h5>
                  <h5><b>UNIDAD: </b><%= @usuario.unidade.descripcion %></h5>
                </td>
              </tr>
            </table>
          <% else %>
            No existe el registro <br />
          <% end %>
          En poder
          <% if @mi_poder.present? %>
            <table class="tabla-impresion">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Numero</th>
                  <th>Formulario</th>
                  <th>Fecha</th>
                </tr>
              </thead>
              <tbody>
                <% @mi_poder.each_with_index do |d, i| %>
                  <tr>
                    <td><%= i+1 %></td>
                    <td><%= d.compra.numero %></td>
                    <td><%= d.compra.docvalor %></td>
                    <td><%= d.fecha %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            No tiene derivaciones <br>
          <% end %>

          Derivados
          <% if @derivados.present? %>
            <table class="tabla-impresion">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Numero</th>
                  <th>Formulario</th>
                  <th>Fecha</th>
                </tr>
              </thead>
              <tbody>
                <% @derivados.each_with_index do |d, i| %>
                  <tr>
                    <td><%= i+1 %></td>
                    <td><%= d.compra.numero %></td>
                    <td><%= d.compra.docvalor %></td>
                    <td><%= d.fecha %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            No tiene derivaciones
          <% end %>
      </div>
    </div>
  </div>
</div>