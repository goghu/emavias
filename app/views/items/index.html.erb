<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Compra</th>
      <th>Descripcion</th>
      <th>Unidad</th>
      <th>P unitario</th>
      <th>P referencial</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.compra_id %></td>
        <td><%= item.descripcion %></td>
        <td><%= item.unidad %></td>
        <td><%= item.p_unitario %></td>
        <td><%= item.p_referencial %></td>
        <td><%= item.estado %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

